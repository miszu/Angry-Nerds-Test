<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AngryNerds.View.RepositoryDetailsView">
<ContentPage.Resources>
<ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="Margin" Value="10" />
            </Style>
        </ResourceDictionary>
	</ContentPage.Resources>
	<ContentPage.Content>
		<ScrollView>
			<StackLayout>
				<Image WidthRequest="200" HeightRequest="200" Source="https://lh4.googleusercontent.com/--6HuPTRFJ7w/AAAAAAAAAAI/AAAAAAAAAJ4/SUatxvJy0uQ/photo.jpg" Margin="10"/>
				<Label Text="{Binding Name}" FontAttributes="Bold"/>
				<Label Text="{Binding OpenIssues}"/>
				<Label Text="{Binding CreationDate}"/>
				<Label Text="{Binding Description}"/>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>
